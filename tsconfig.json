{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true, 
    "moduleResolution": "node"  
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}